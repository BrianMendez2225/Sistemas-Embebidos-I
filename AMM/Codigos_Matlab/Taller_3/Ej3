clc; clear; close all;

% Definir las funciones de transferencia
K = 10
G = tf([4], [1 0])
H = 5

% Reducimos paso a paso
G1 = series(K, G)
T = feedback(G1, H);

disp('La funci칩n de transferencia equivalente del sistema es:');
T

figure;
step(T); % Gr치fica de la respuesta al escal칩n
title('Respuesta del Sistema a una Entrada Escal칩n Unitario');
xlabel('Tiempo (s)');
ylabel('Amplitud de la Salida');
grid on;
